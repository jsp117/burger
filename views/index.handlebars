<div class="p-4"></div>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="card col-lg-4 text-center overflow-auto" style="height: 280px;">
        <h5 class="card-header bg-light">My Burgers</h5>
        <ul style="margin-left: -40px;" class=" list-group-flush">
            {{#each burgers}}
            {{#unless devoured}}
            <li class="list-group-item">
                <p class="card-text">
                    {{this.burger_name}}
                </p>
                <button class="btn btn-dark eatBurger" data-burgerid="{{this.id}}" type="submit">
                    Eat Burger</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="col-lg-2"></div>
    <div class="card col-lg-4 text-center overflow-auto" style="height: 280px;">

        <h5 class="card-header bg-light">Eaten Burgers</h5>
        <ul style="margin-left: -40px;" class=" list-group-flush">
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item">
                <p class="card-text">
                    {{this.burger_name}}
                </p>
                <button class="btn btn-dark trashBurger" data-eatenid="{{this.id}}" type="submit">Trash</button>

            </li>
            {{/if}}
            {{/each}}
        </ul>

    </div>

    {{!-- row end --}}
</div>

<div class="p-5"></div>

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 card mb-5 text-center">
        <h5 class="card-header bg-light">Place your order</h5>
        <form id="addBurger">
            <textarea class="form-control" type="text" name="newBurger" id="add-burger"
                placeholder="Can I take your order?"></textarea>
            <button class="btn btn-dark mt-2 mb-2" type="submit">Add Burger</button>
        </form>
    </div>
</div>