<div class="row">
    <div class="card col-lg-4 bg-secondary p-3">
        <div class="card-body">
            <h5 class="card-title">My Burgers</h5>
            <ol style="margin-left: -40px;" class="mt-3 overflow-auto">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">
                    <p class="card-text">
                        {{this.burger_name}}
                        <button class="btn btn-dark ml-3 eatBurger" data-burgerid="{{this.id}}" type="submit">
                            Eat Burger</button>
                    </p>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="col-lg-4"></div>
    <div class="card col-lg-4 bg-secondary p-3">
        <div class="card-body">
            <h5 class="card-title">Eaten Burgers</h5>
            <ol style="margin-left: -40px;" class="mt-3">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">
                    <p class="card-text">
                        {{this.burger_name}}
                        <button class="btn btn-dark ml-3 trashBurger" data-eatenid="{{this.id}}"
                            type="submit">Trash</button>
                    </p>
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>

    {{!-- row end --}}
</div>

<div class="p-5"></div>

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 bg-secondary p-3">
        <form id="addBurger" class="">
            <textarea class="form-control" type="text" name="newBurger" id="add-burger"
                placeholder="Can I take your order?"></textarea>
            <button class="btn btn-dark" type="submit">Add Burger</button>
        </form>
    </div>
</div>